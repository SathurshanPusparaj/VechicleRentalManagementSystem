@model vehiclerent.Models.Vehicle

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta charset="UTF-8">
    <title>Car Rentals</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/css/linearicons.css">
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/css/nice-select.css">
    <link rel="stylesheet" href="~/Content/css/animate.min.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/css/main.css">
</head>
<body>
    <header id="header" id="home" style="background-color:black;">
        <div class="container">
            <div class="row align-items-center justify-content-between d-flex">
                <div id="logo">
                    <a href="index.html"><img src="/Content/img/logo.png" alt="" title="" /></a>
                </div>
                <nav id="nav-menu-container">
                    <ul class="nav-menu">
                        <li style="color:white"><a>Welcome</a></li>
                        <li><a style="color:white">@HttpContext.Current.User.Identity.Name</a></li>
                        <li>@Html.ActionLink("Signout", "signout", "Tenant", new { @style = "color:white;" })</li>

                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <h4>Vehicle</h4>

    @Html.DisplayFor(model => model.VehicleType)
    <section class="blog-posts-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 post-list blog-post-list">
                    <div class="single-post">
                        <img src="@Url.Content(@Model.Image)" class="img-fluid" />
                        <ul class="tags">
                            <li>@Html.DisplayFor(model => model.price)/day</li>
                        </ul>

                        <h1>
                            @Html.DisplayFor(model => model.VehicleModel)
                        </h1>

                        <div class="content-wrap">

                            <blockquote class="generic-blockquote">
                                Capacity         : @Html.DisplayFor(model => model.capacity) Person <br>
                                Doors            : @Html.DisplayFor(model => model.doors) <br>
                                Air Condition    : @Html.DisplayFor(model => model.air) <br>
                                Transmission     : @Html.DisplayFor(model => model.transmission)

                            </blockquote>

                            <p>
                                @Html.DisplayFor(model => model.Description)
                            </p>
                        </div>
                        <section class="nav-area pt-50 pb-100">
                            <div class="container">
                                <div class="row justify-content-between">
                                    <div class="col-sm-6 nav-left justify-content-start d-flex">
                                        <div class="post-details">
                                            <p>Back</p>
                                            <h4 class="text-uppercase">@Html.ActionLink("Back to List", "viewpage")</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>


                <div class="col-lg-4 sidebar">
                    <div class="single-widget protfolio-widget">
                        <img src="img/blog/user2.jpg" alt="">
                        <a href="#"><h4>@ViewBag.renter.RenterName</h4></a>
                        <p>
                            @ViewBag.renter.about
                        </p>
                        <p id="rentpno" style="visibility:hidden">Mobile No:@ViewBag.renter.RenterTpNo</p>
                        <p id="rentmail" style="visibility:hidden">Email-Address:@ViewBag.renter.RenterEMail</p>
                        <button id="btntp" class="btn btn-primary">View Renter Tpno</button><br /><br />
                        <button id="btnmail" class="btn btn-info">View Renter email</button>
                    </div>
                    @if (ViewBag.othervh != null)
                    {
                        <div class="single-widget recent-posts-widget">
                            <h4 class="title">Recent Posts</h4>
                            <div class="blog-list ">
                                @foreach (var item in ViewBag.othervh)
                                {
                                    <div class="single-recent-post d-flex flex-row">
                                        <div class="recent-thumb">
                                            <img src="@Url.Content(item.Image)" class="img-fluid" width="100" height="100" />
                                        </div>
                                        <div class="recent-details">
                                            <a href="blog-single.html">
                                                <h4>
                                                    @Html.ActionLink((string)item.VehicleModel, null)
                                                </h4>
                                            </a>
                                        </div>
                                    </div>
                                    <br />
                                }
                            </div>

                        </div>
                    }

                </div>
            </div>
        </div>
    </section>



    <footer class="footer-area">
        <div class="container">
            Copyright &copy; CarRentals.com
        </div>
    </footer>

    <script src="~/Content/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="~/Content/js/vendor/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Content/js/superfish.min.js"></script>
    <script src="~/Content/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Content/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/jquery.nice-select.min.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script>
        document.getElementById("btntp").addEventListener("click", function () {
            document.getElementById("rentpno").style.visibility = "visible";
        });

        document.getElementById("btnmail").addEventListener("click", function () {
            document.getElementById("rentmail").style.visibility = "visible";
        });



    </script>
</body>
</html>
