</head>
<body>
    <header id="header" id="home">
        <div class="container">
            <div class="row align-items-center justify-content-between d-flex">
                <div id="logo">
                    <a href="index.html"><img src="/Content/img/logo.png" alt="" title="" /></a>
                </div>
                <nav id="nav-menu-container">
                    <ul class="nav-menu">
                        <li style="color:white"><a>Welcome</a></li>
                        <li><a style="color:white">@HttpContext.Current.User.Identity.Name</a></li>
                        <li>@Html.ActionLink("Signout", "signout", "Tenant", new { @style = "color:white;" })</li>

                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <section class="banner-area relative" id="home">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Cars
                    </h1>
                    <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="cars.html"> Cars</a></p>
                </div>
            </div>
        </div>
    </section>


    <section class="model-area section-gap" id="cars">
        <div class="container">
            <div class="row d-flex justify-content-center pb-40">
                <div class="col-md-8 pb-40 header-text">
                    <h1 class="text-center pb-10">Search Results</h1>
                </div>
            </div>

            <br />
            @foreach (var item in Model)
            {
                <div class="row align-items-center single-model item">
                    <div class="col-lg-6 model-left">
                        <div class="title justify-content-between d-flex">
                            <h4 class="mt-20">@Html.DisplayFor(modelItem => item.VehicleType)</h4>
                            <h2>Rs.@Html.DisplayFor(modelItem => item.price)<span>/day</span></h2>
                        </div>
                        <p>
                            @Html.DisplayFor(modelItem => item.VehicleModel)
                        </p>
                        <p>
                            Capacity         : @Html.DisplayFor(modelItem => item.capacity) Person <br>
                            Doors            : @Html.DisplayFor(modelItem => item.doors) <br>
                            Air Condition    : @Html.DisplayFor(modelItem => item.air) <br>
                            Transmission     : @Html.DisplayFor(modelItem => item.transmission)
                        </p>
                        @Html.ActionLink("Book This Car Now", "details", new { id = item.VehicleId }, new { @class = "text-uppercase primary-btn" })
                    </div>
                    <div class="col-lg-6 model-right">
                        <img src="@Url.Content(@item.Image)" class="img-fluid" />
                    </div>
                </div>
                <hr>
            }
        </div>
        </div>
    </section>

    <footer class="footer-area section-gap">
        <div class="container">
